<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">


    <TextView
        android:id="@+id/tvTitleDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="Martins" />

    <ImageView
        android:id="@+id/ivImageDetails"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/tvTitleDetails"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivLikeDetails"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivImageDetails"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/ivLikeActiveDetails"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivImageDetails"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ufi_heart_active"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ivCommentDetails"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ivImageDetails"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/ivLikeDetails"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivShareDetails"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_below="@+id/ivImageDetails"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/ivCommentDetails"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/ivSaveDetails"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_below="@+id/ivImageDetails"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"
        app:srcCompat="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvTitle2Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCommentDetails"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvDescriptionDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivCommentDetails"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/tvTitle2Details"
        android:text="TextView" />


</RelativeLayout>